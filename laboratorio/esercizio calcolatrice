#include <stdio.h>

int main() {
    int scelta, num1, num2;

    printf("Scegli l'operazione da eseguire:\n");
    printf("1 - Addizione\n");
    printf("2 - Sottrazione\n");
    printf("3 - Moltiplicazione\n");
    printf("4 - Divisione\n");
    printf("Inserisci la tua scelta: ");
    scanf("%d", &scelta);


    printf("Inserisci il primo numero: ");
    scanf("%d", &num1);
    printf("Inserisci il secondo numero: ");
    scanf("%d", &num2);

    switch (scelta) {
        case 1:
            printf("Risultato dell'addizione: %d\n", num1 + num2);
            break;
        case 2:
            printf("Risultato della sottrazione: %d\n", num1 - num2);
            break;
        case 3:
            printf("Risultato della moltiplicazione: %d\n", num1 * num2);
            break;
        case 4:
            if (num2 != 0) {
                printf("Risultato della divisione: %f\n", (float)num1 / num2);
            } else {
                printf("Divisione per zero non consentita.\n");
            }
            break;
        default:
            printf("Scelta non valida.\n");
    }

    return 0;
}
 
